<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_black_1000"
    android:orientation="vertical"
    tools:context="pe.dominiotech.movil.safe2biz.sac.activity.AccionCorrectivaDetalleActivity">


    <include
        android:id="@+id/app_bar"
        layout="@layout/tool_bar" />

    <ScrollView

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/app_fondo_menu">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_fondo_menu"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <LinearLayout
                android:id="@+id/lnlyDatosGeneralesRegistroAyC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/md_white_1000"
                android:elevation="3dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSubTituloSac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="fill_horizontal"
                        android:text="@string/datos_generales"
                        android:textColor="@color/app_letra_tab"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/tvCodigoSac"
                            android:layout_width="230dp"
                            android:layout_height="30dp"
                            android:layout_weight="1.6"
                            android:background="@drawable/border_sac_campo"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="Código"
                            android:textColor="@color/app_letra_tab"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvCodigoCarViewSac"
                            android:layout_width="fill_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1.6"
                            android:background="@drawable/border_sac_campo"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Código"
                            android:textColor="@color/tw__medium_gray"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/tvDescripcionSac"
                            android:layout_width="230dp"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1.6"
                            android:background="@drawable/border_sac_campo"
                            android:gravity="center_vertical"
                            android:minHeight="30dp"
                            android:paddingLeft="10dp"
                            android:text="Descripcion"
                            android:textColor="@color/app_letra_tab"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvDescripcionCarViewSac"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.6"
                            android:background="@drawable/border_sac_campo"
                            android:gravity="center_vertical"
                            android:minHeight="30dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Descripcion"
                            android:textColor="@color/tw__medium_gray"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/tvOrigenSac"
                            android:layout_width="230dp"
                            android:layout_height="30dp"
                            android:layout_weight="1.6"
                            android:background="@drawable/border_sac_campo"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="Origen"
                            android:textColor="@color/app_letra_tab"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvOrigenCarViewSac"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.6"
                            android:background="@drawable/border_sac_campo"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Origen"
                            android:textColor="@color/tw__medium_gray"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/tvFechaSac"
                            android:layout_width="230dp"
                            android:layout_height="30dp"
                            android:layout_weight="1.6"
                            android:background="@drawable/border_sac_campo"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="Fecha"
                            android:textColor="@color/app_letra_tab"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvFechaCarViewSac"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.6"
                            android:background="@drawable/border_sac_campo"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Fecha"
                            android:textColor="@color/tw__medium_gray"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/tvResponsableSac"
                            android:layout_width="230dp"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1.6"
                            android:background="@drawable/border_sac_campo"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="Responsable"
                            android:textColor="@color/app_letra_tab"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvResponsableCarViewSac"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.6"
                            android:background="@drawable/border_sac_campo"
                            android:gravity="center_vertical"
                            android:minHeight="30dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Responsable"
                            android:textColor="@color/tw__medium_gray"
                            android:textSize="13sp" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/lnlyDatosGeneralesRegistroAyC"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/md_white_1000"
                    android:elevation="3dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.7"
                                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                                <EditText
                                    android:id="@+id/edFecha"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:hint="Fecha de ejecución"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:textColorHint="@color/tw__medium_gray"
                                    android:textSize="16sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <ImageButton
                                android:id="@+id/btnFecha"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_weight="0.3"
                                android:background="@color/md_white_1000"
                                android:paddingBottom="5dp"
                                android:onClick="showDatePickerDialog"
                                android:src="@drawable/ic_event_black_24dp"
                                android:tint="@color/msi_background_gray" />
                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.4"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                            <EditText
                                android:id="@+id/edt_obs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:hint="Comentarios"
                                android:inputType="text|textMultiLine"
                                android:maxLines="20"
                                android:maxLength="4000"
                                android:textColorHint="@color/tw__medium_gray"
                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:weightSum="3">

                            <ImageButton
                                android:id="@+id/btnGaleria"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:background="@color/md_white_1000"
                                android:src="@drawable/ic_insert_photo_white_36dp"
                                android:tint="#333" />

                            <ImageButton
                                android:id="@+id/btnCamara"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:background="@color/md_white_1000"
                                android:src="@drawable/ic_camera" />
                        </RelativeLayout>

                        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/frameFotoEvento"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:paddingBottom="10dp">
                            <ImageView
                                android:id="@+id/fotoEvento"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"/>
                            <ImageView
                                android:id="@+id/closeFotoEvento"
                                android:layout_gravity="top|end"
                                android:layout_marginRight="5px"
                                android:background="@drawable/border_close"
                                android:src="@drawable/ic_close_white_24dp"
                                android:layout_width="36dp"
                                android:layout_height="36dp" />
                        </FrameLayout>
                        <Button
                            android:id="@+id/btnGuardar"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:text="@string/guardar_detalle"
                            android:theme="@style/AppTheme.Button" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>